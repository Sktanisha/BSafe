<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:textSize="35dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#5F8085"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="30dp"
        android:gravity="center"
        android:background="#e6e6fa">


        <Button
            android:id="@+id/btnSeeComplaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:padding="15dp"
            android:gravity="center"
            android:text="See List of Complaints"
            android:textSize="18dp"

            android:backgroundTint="#5F8575"
            android:clickable="true"

            />





        <Button
            android:id="@+id/btnCheckFeedbacks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:padding="15dp"
            android:gravity="center"
            android:backgroundTint="#5F8575"
            android:text="Check User Feedbacks"
            android:textSize="18dp"
            android:clickable="true"/>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:background="#6F8595"
        >



        <TextView
            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="LogOut"
            android:textSize="18dp"
            android:clickable="true"/>

    </LinearLayout>






</LinearLayout>